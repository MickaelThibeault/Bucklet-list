{% extends 'base.html.twig' %}

{% block title %}
        {{ parent() }} | About Us
{% endblock %}

{% block main %}
        <section class="team-members">
                {% for membre in MembresEquipe %}
                        <article>
                                <img src="{{ membre.picture }}" alt="{{ membre.lastname }}">
                                <div>
                                        <h3>{{ membre.firstname }} {{ membre.lastname }} {{ membre.firstname == "Fabien" ? "&#128151" : "" }}</h3>
                                        <p>Cr√©ateur de {{ membre.creatorOf }}</p>
                                        <p>Date de naissance : {{ membre.dateOfBirth|date("d-m-Y") }}</p>
                                        <p>{{ membre.description }}</p>
                                </div>
                        </article>
                {% endfor %}
        </section>
{% endblock %}

